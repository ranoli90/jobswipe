# Environment Configuration
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgresql://localhost/jobswipe
BASIC_AUTH_USER=your_username_here
BASIC_AUTH_PASS=your_password_here

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
CELERY_BROKER_URL=amqp://localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key-here
MINIO_SECRET_KEY=your-minio-secret-key-here
MINIO_BUCKET=jobswipe
MINIO_SECURE=False

# JWT Authentication
SECRET_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service Configuration (Ollama preferred, OpenAI fallback)
# Ollama Configuration (recommended for cost optimization)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI API (fallback option) - REMOVED: Paid service replaced with free Ollama
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4

# Google Cloud (for OCR) - REMOVED: Paid service, use free alternatives like Tesseract
# GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Encryption Configuration
ENCRYPTION_PASSWORD=your-encryption-password-here
ENCRYPTION_SALT=your-encryption-salt-here

# Vault Configuration
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token-here

# API Keys for internal services
ANALYTICS_API_KEY=your-analytics-api-key-here
INGESTION_API_KEY=your-ingestion-api-key-here
DEDUPLICATION_API_KEY=your-deduplication-api-key-here
CATEGORIZATION_API_KEY=your-categorization-api-key-here
AUTOMATION_API_KEY=your-automation-api-key-here

# Environment
ENVIRONMENT=development
DEBUG=True

# Additional placeholders
LOCUST_PASSWORD=your_password_here
GRAFANA_ADMIN_PASSWORD=your_password_here
